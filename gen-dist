GCIN_VERSION="gcin-`cat VERSION.gcin`"
sh gen-gtk3
sed -i '/^$/d' Changelog.html
rm -f tags core.*
cd ..
rm -fr $GCIN_VERSION
cp -a gcin $GCIN_VERSION
cd $GCIN_VERSION
rm -f gcin-version.h
make gcin-version.h
make clean
cd ..

/usr/local/bin/tsd2a32 -nousecount ~/.gcin/tsin32 > $GCIN_VERSION/data/tsin.src
XZ_OPT=-7e tar -cvJ --owner=0 --group=0 -f $GCIN_VERSION.tar.xz $GCIN_VERSION

cd gcin; ./configure

cd ~/rpm/SOURCES

if [ ! -f $GCIN_VERSION.tar.xz ]; then
  ln -sf ~/$GCIN_VERSION.tar.xz .
fi

cd

export GCIN_USE_XIM=Y

rpm -bb gcin.spec
